pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Setup Environment') {
            steps {
                echo 'Setting up PHP environment...'
                sh 'php -v'
                sh 'composer install'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'php artisan build' // Adjust to your build command
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'php artisan test' // Adjust to your test command
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Deployment commands here
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished!'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
