pipeline {
    agent any

    stages {
        stage('Setup Environment') {
            steps {
                echo 'Setting up PHP environment...'
                // Check for PHP and Composer
                sh 'which php || exit 1'
                sh 'php -v'
                sh 'which composer || exit 1'
                sh 'composer -v'

                // Install dependencies
                sh 'composer install'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'php artisan build'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'php artisan test'
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
